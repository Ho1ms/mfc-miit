upstream websocket4 {
    server 0.0.0.0:3001;
}

server
        {
		server_name dom.ginda.info;
        charset utf-8;
		
	location / {

		proxy_pass_header Server;
		proxy_set_header Host $http_host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
		proxy_pass http://0.0.0.0:3001;
  }  


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/dom.ginda.info/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/dom.ginda.info/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server
        {
    if ($host = dom.ginda.info) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


		server_name dom.ginda.info;
    listen 80;
    return 404; # managed by Certbot
}